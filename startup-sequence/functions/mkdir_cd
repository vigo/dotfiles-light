mkdir_cd(){
    if [[ $1 ]]; then
        filename="${1}"
        if [[ $DFL_OS == 'OSX' ]]; then
            filename=${1//:/-}
        fi
        mkdir -p "${filename}" && cd "${filename}" || exit
    else
        echo 'usage: mkdir_cd path/to/directory'
        echo '       mkdir_cd "you folder name"'
        echo '       mkdir_cd path/to/new/non-existing/dir'
    fi
}
